<!--
including header content which is common for all pages
-->
<%- include ../layouts/header.ejs %>

<% if (messages.error) { %>
	<p style="color:red"><%- messages.error %></p>
<% } %>

<% if (messages.success) { %>
	<p style="color:green"><%- messages.success %></p>
<% } %>	

<div>
	
	<!-- Button trigger modal -->
	<button type="button" class="btn btn-primary" data-toggle="modal" data-target="#myModalAdd">
	 Add Campaign
	</button>
	<!--  -->
</div>	

<div class="table-responsive">
<table class="table">          
	<tr style='text-align:left; background-color:#CCC'>
		<th>ID</th>
		<th>Judul</th>
		<th>Deskripsi</th>
		<th>Foto</th>
		<th>Mulai Tangal</th>
		<th>Deadline[hari]</th>	
		<th>Target</th>
		<th>Income</th>
		<th>Alamat Masjid</th>
		<th>Kontak DKM</th>
		<th>Action</th>
	</tr>

	
	<!--
		Using FOREACH LOOP for the users array
		
		myArray.forEach(function(el, index) {
			// el - current element, i - index
		});
	-->
	
	<% if (data) { %>
	<% data.forEach(function(cpg){ %>
		<tr>
			<td><%= cpg.id_cpg %></td>
			<td><%= cpg.judul_cpg %></td>
			<td><%= cpg.desc_cpg %></td>
			<td><%= cpg.foto_cpg %></td>
			<td><%= cpg.start_cpg %></td>
			<td><%= cpg.deadline_cpg %></td>
			<td><%= cpg.target_cpg %></td>
			<td><%= cpg.income_cpg %></td>
			<td><%= cpg.alamat %></td>
			<td><%= cpg.kontak_dkm %></td>
			<td>
				<div style="float:left">
					<a class="btn btn-warning" href='/campaign_/edit/<%= cpg.id_cpg %>/<%= id_admin1 %>'> <i class="glyphicon glyphicon-edit"></i> Edit</a>	
					<form method="post" action="/campaign_/delete/<%= cpg.id_cpg %>/<%= id_admin1 %>"   style="float:right">	
						<input type="submit" name="delete" value='Delete' onClick="return confirm('Are you sure you want to delete?')" class="btn btn-danger" />
						<input type="hidden" name="_method" value="DELETE" />					
					</form>
				</div>
			</td>
		</tr>
	<% }) %>
	<% } %>

</table>
</div>




<!-- Modal Add user -->
<div class="modal fade" id="myModalAdd" tabindex="-1" role="dialog" aria-labelledby="myModalLabel">
  <div class="modal-dialog" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
        <h4 class="modal-title" id="myModalLabel">New Campaign</h4>
      </div>
      <div class="modal-body">
         <form action="/campaign_/add/<%= id_admin1 %>" method="post" name="form1">
	          <div class="form-group">
	            <label for="judul" class="control-label">Judul Campaign :</label>
	            <input type="text" class="form-control" name="judul_cpg" id="judul_cpg" placeholder="Judul Campaign"/> </
	          </div>
	          <div class="form-group">
	            <label for="desc" class="control-label">Deskripsi:</label>
	             <input type="text" class="form-control" id="desc_cpg" placeholder="Deskripsi" name="desc_cpg" > </
	          </div>
	          <div class="form-group">
	            <label for="foto" class="control-label">Foto :</label>
	            <input type="file" class="form-control" id="foto_cpg" name="foto_cpg"  />
	          </div>
	          <div class="form-group">
	            <label for="start" class="control-label">Mulai Tanggal :</label>
	            <input type="date" class="form-control" name="start_cpg" id="start_cpg" placeholder="dd/mm/yyyy"/> </
	          </div>
	          <div class="form-group">
	            <label for="deadline" class="control-label">Deadline :</label>
	            <input type="text" class="form-control" name="deadline_cpg" id="deadline_cpg" placeholder="jumlah hari"/> </
	          </div>
	          <div class="form-group">
	            <label for="target" class="control-label">Jumlah Target :</label>
	            <input type="text" class="form-control" name="target_cpg" id="target_cpg" placeholder="nominal"/> </
	          </div>
	          <div class="form-group">
	            <label for="income" class="control-label">Income :</label>
	            <input type="text" class="form-control" name="income_cpg" id="income_cpg" placeholder="nominal"/> </
	          </div>
	          <div class="form-group">
	            <label for="alamat" class="control-label">Alamat :</label>
	            <input type="textarea" class="form-control" name="alamat" id="alamat" placeholder="Alamat"/> </
	          </div>
	           <div class="form-group">
	            <label for="kontak_dkm" class="control-label">Kontak DKM :</label>
	            <input type="textarea" class="form-control" name="kontak_dkm" id="kontak_dkm" placeholder="Kontak DKM"/></
	          </div>
	      </form>
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
        <input type="submit" name="Submit" value="Save" class="btn btn-primary" />
      </div>
    </div>
  </div>
</div>
